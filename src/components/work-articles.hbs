<div class="container">
  <div class="row justify-content-md-center mt-5">
    <div class="col articles-list">
        {{> shared/headerText header="Take a look at some of my work published by the Canada Energy Regulator."}}
      <div class="row justify-content-md-center mb-4 mt-5">
        <div class="col">
          <div
            class="col alert alert-secondary fs-3"
            role="alert"
            id="minor-articles-count"
          ><strong>{{htmlWebpackPlugin.options.page.articles.minorCount}}</strong> Market Snapshots released
          </div>
        </div>
        <div class="col">
          <div
            class="alert alert-success fs-3"
            role="alert"
            id="major-articles-count"
          ><strong>{{htmlWebpackPlugin.options.page.articles.majorCount}}</strong> Major Reports released
          </div>
        </div>
      </div>
      {{#each htmlWebpackPlugin.options.page.articles.articleInfo}}
          {{> shared/articles text=this}}
      {{/each}}
    </div>
  </div>
</div>